# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# =========================================
# CORS Configuration
# =========================================
CORS_ORIGIN=http://localhost:5173

# =========================================
# Security Configuration
# =========================================
# JWT Secret for authentication (if needed)
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =========================================
# Logging Configuration
# =========================================
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# =========================================
# Error Handling
# =========================================
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_API_KEY=your-error-reporting-api-key

# =========================================
# Cache Configuration
# =========================================
ENABLE_CACHE=true
CACHE_DURATION=300  # 5 minutes in seconds

# =========================================
# API Configuration
# =========================================
API_PREFIX=/api
API_VERSION=v1

# =========================================
# Development Configuration
# =========================================
ENABLE_DEV_TOOLS=true
ENABLE_SWAGGER=true

# =========================================
# Production Configuration
# =========================================
# SSL Configuration (if needed)
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SSL_CERT_PATH=/path/to/ssl/cert.pem

# =========================================
# Monitoring Configuration
# =========================================
ENABLE_MONITORING=true
MONITORING_INTERVAL=60000  # 1 minute in milliseconds

# =========================================
# Database Indexes
# =========================================
ENABLE_AUTO_INDEX=true

# =========================================
# Backup Configuration
# =========================================
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL=86400000  # 24 hours in milliseconds
BACKUP_PATH=./backups

# =========================================
# Session Configuration
# =========================================
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# =========================================
# File Upload Configuration
# =========================================
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# =========================================
# Email Configuration (if needed)
# =========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@yourdomain.com

# =========================================
# WebSocket Configuration
# =========================================
WS_PORT=5001
ENABLE_WEBSOCKET=true

# =========================================
# Health Check Configuration
# =========================================
HEALTH_CHECK_INTERVAL=300000  # 5 minutes in milliseconds
HEALTH_CHECK_TIMEOUT=5000  # 5 seconds in milliseconds